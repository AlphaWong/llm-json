{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "name": {
            "type": "string",
            "pattern": ".*\\S+"
        },
        "phone": {
            "type": "string",
            "pattern": "^\\+\\d+$"
        },
        "latlng": {
            "type": "string",
            "pattern": "^(\\-?\\d+(\\.\\d+)?)$"
        },
        "deliveries": {
            "items": {
                "properties": {
                    "remarks": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "toContact": {
                        "properties": {
                            "name": {
                                "$ref": "#/definitions/name"
                            },
                            "phone": {
                                "$ref": "#/definitions/phone"
                            }
                        },
                        "required": [
                            "phone",
                            "name"
                        ],
                        "type": "object"
                    },
                    "toStop": {
                        "type": "integer",
                        "minimum": 1
                    }
                },
                "required": [
                    "toContact"
                ],
                "type": "object"
            },
            "minItems": 1,
            "type": "array"
        },
        "requesterContact": {
            "properties": {
                "name": {
                    "$ref": "#/definitions/name"
                },
                "phone": {
                    "$ref": "#/definitions/phone"
                }
            },
            "required": [
                "phone",
                "name"
            ],
            "type": "object"
        },
        "scheduleAt": {
            "type": "string",
            "pattern": "^\\d{4}-[01]\\d-[0-3]\\dT[0-2]\\d:[0-5]\\d:[0-5]\\d(.\\d+)?Z$"
        },
        "serviceType": {
            "type": "string",
            "pattern": "^\\S+"
        },
        "specialRequests": {
            "items": {
                "type": "string",
                "pattern": "^\\S+"
            },
            "type": [
                "array",
                "null"
            ]
        },
        "paymentMethod": {
            "type": "string",
            "enum": [
                "CASH",
                "CREDIT"
            ]
        },
        "fleetPriority": {
            "type": "string",
            "enum": [
                "NONE",
                "FLEET_FIRST"
            ]
        },
        "stops": {
            "items": {
                "properties": {
                    "placeId": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "addresses": {
                        "type": "object",
                        "additionalProperties": false,
                        "minProperties": 1,
                        "patternProperties": {
                            "^(en_HK|zh_HK|en_PH|en_SG|th_TH|en_TH|zh_TW)$": {
                                "type": "object",
                                "properties": {
                                    "displayString": {
                                        "type": "string",
                                        "pattern": "^\\S+"
                                    },
                                    "country": {
                                        "type": "string",
                                        "enum": [
                                            "HK",
                                            "PH",
                                            "SG",
                                            "TH",
                                            "TW"
                                        ]
                                    }
                                },
                                "required": [
                                    "displayString",
                                    "country"
                                ]
                            }
                        }
                    },
                    "location": {
                        "properties": {
                            "lat": {
                                "$ref": "#/definitions/latlng"
                            },
                            "lng": {
                                "$ref": "#/definitions/latlng"
                            }
                        },
                        "required": [
                            "lat",
                            "lng"
                        ],
                        "type": [
                            "object",
                            "null"
                        ]
                    }
                },
                "required": [
                    "addresses"
                ],
                "type": "object"
            },
            "maxItems": 10,
            "minItems": 2,
            "type": "array"
        }
    },
    "properties": {
        "serviceType": {
            "$ref": "#/definitions/serviceType"
        },
        "deliveries": {
            "$ref": "#/definitions/deliveries"
        },
        "stops": {
            "$ref": "#/definitions/stops"
        },
        "requesterContact": {
            "$ref": "#/definitions/requesterContact"
        },
        "specialRequests": {
            "$ref": "#/definitions/specialRequests"
        },
        "scheduleAt": {
            "$ref": "#/definitions/scheduleAt"
        },
        "paymentMethod": {
            "$ref": "#/definitions/paymentMethod"
        },
        "fleetPriority": {
            "$ref": "#/definitions/fleetPriority"
        }
    },
    "required": [
        "serviceType",
        "deliveries",
        "stops",
        "requesterContact",
        "scheduleAt"
    ],
    "type": "object",
    "additionalProperties": true
}
